            <modules>
                <module>ktor-components</module>
            </modules>
        </profile>
        <profile>
            <id>bintray</id>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>ktor-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
