# curl version = 8.10.1
package = libcurl
headers = curl/curl.h
headerFilter = curl/*

# libcurl uses native Schannel for TLS on Windows
# There is no libz by default installed on Windows, so we need to include it statically
staticLibraries.mingw = libcurl.a libnghttp2.a libzlib.a
compilerOpts.mingw = -DCURL_STATICLIB
linkerOpts.mingw = -liphlpapi -lsecur32 -lcrypt32 -lws2_32

staticLibraries.osx = libcurl.a libnghttp2.a libssl.a libcrypto.a
linkerOpts.osx = -framework SystemConfiguration

staticLibraries.linux = libcurl.a libnghttp2.a libssl.a libcrypto.a
linkerOpts.linux = -lz
