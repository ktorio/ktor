                             -L/usr/lib64 \
                             -L/usr/lib/x86_64-linux-gnu \
                             -L/opt/local/lib \
                             -L/usr/local/lib \
                             -L/opt/homebrew/opt/curl/lib

compilerOpts.linux =         -I/usr/include/curl \
                             -I/usr/include/x86_64-linux-gnu/curl \
                             -I/opt/homebrew/opt/curl/include/curl

